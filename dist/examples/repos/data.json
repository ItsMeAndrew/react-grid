{
    "title": "EROAD Repos",
	"rows_per_page": 5,
    "paging_options": [5, 10, 20],
    "show_paging": true,
    "columns": [
        {
            "id": "owner.avatar_url",
            "index": 0,
            "name": null,
            "sortable": false,
			"ascending": false,
            "style": {
                "width": 30
            },
			"type": {
				"name": "image",
                "src": "owner.avatar_url",
                "props": {
                    "style": {
                        "width": 20,
                        "backgroundColor": "#e60000",
                        "padding": 3,
                        "borderRadius": "50%"
                    }
                }
			}
        },
		{
            "id": "full_name",
            "index": 1,
            "name": "Name",
            "sortable": true,
			"ascending": false,
			"type": {
				"name": "link",
                "display": "full_name",
                "href": "html_url",
                "props": {
                    "rel": "View github repo",
                    "target": "_blank"
                }
			}
        },
        {
            "id": "updated_at",
            "index": 2,
            "name": "Updated",
            "sortable": true,
			"ascending": false,
            "default_sort": true,
			"type": {
				"name": "datetime",
                "from_now": true
			}
        },
        {
            "id": "description",
            "index": 3,
            "name": "Description",
            "sortable": true,
			"ascending": false,
            "row_style": {
                "whiteSpace": "nowrap",
                "maxWidth": 200,
                "overflow": "hidden",
                "textOverflow": "ellipsis"
            },
			"type": {
				"name": "string"
			}
        },
        {
            "id": "language",
            "index": 4,
            "name": "Language",
            "sortable": true,
			"ascending": false,
			"type": {
				"name": "string"
			}
        },
        {
            "id": "watchers_count",
            "index": 0,
            "name": "Watchers",
            "sortable": true,
			"ascending": false,
            "style": {
                "width": 25
            },
			"type": {
				"name": "numeric"
			}
        },
        {
            "id": "open_issues",
            "index": 1,
            "name": "Open Issues",
            "sortable": true,
			"ascending": false,
            "style": {
                "width": 25
            },
			"type": {
				"name": "numeric"
			}
        }
    ]
}
